{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/@front/*"
    ]
  },
  "scripts": {
    "commit": "git-cz",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean",
    "version": "lerna version --conventional-commits",
    "package:build": "lerna run --stream --scope @front/package-template build",
    "designVue:dev": "lerna run --stream --scope @front/design-vue dev",
    "designVue:build-lib": "lerna run --stream --scope @front/design-vue build:lib",
    "designVue:build-docs": "lerna run --stream --scope @front/design-vue build:doc",
    "designVue:lint": "lerna run --stream --scope @front/design-vue lint",
    "designVue:newComp": "yarn workspace @front/design-vue genNewComp"


  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "packages/@front/*/src/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "commitizen": "^4.2.4",
    "cz-lerna-changelog": "^2.0.3",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2"
  }
}